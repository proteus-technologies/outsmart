<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @problem.title %>
</p>

<p>
  <b>Text description:</b>
  <%= @problem.text_description %>
</p>

<p>
  <b>Start date:</b>
  <%= @problem.start_date %>
</p>

<p>
  <b>End date:</b>
  <%= @problem.end_date %>
</p>

<p>
  <b>Admin Creator:</b>
  <%= @problem.user_id %>
</p>
<p>
  <b>Solutions:</b>
  <table>
    <tr>
      <th>Text Description</th>
      <th>User ID</th>
      <th>Solution File URL</th>
    </tr>
    <% @problem.solutions.each do |s| %>
    <tr>
      <td><%= s.text_description %></td>
      <td><%= s.user_ID %></td>
      <td><%= s.solution_file_url %></td>
    </tr>
    <% end %>
  </table>
</p>

<%= link_to 'Edit', edit_problem_path(@problem) %> |
<%= link_to 'Back', problems_path %>
